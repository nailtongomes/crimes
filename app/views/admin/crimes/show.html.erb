<% content_for :sidebar do %>
<ul>
	<h2 style="text-align: center"><%= link_to "[ Voltar ] ", admin_crimes_path  %></h2>
</ul>
<% end %>

<div class="entry">
<h3 style="text-align: center"><a><%= @crime.nome %></a></h3>
	<p>
		<b>Capitulação: </b><br/><em><%= @crime.capit %> </em>
	</p>
	<p>
		<b>Pena: </b><br/><em><%= @crime.pena %> </em>
	</p>	
	<p>
		<b>Ação Penal: </b><br/><em><%= @crime.acao_penal %> </em>
	</p>
	<p>
		<b>Competência: </b><br/><em><%= @crime.competencia %> </em>
	</p>
	<p class="links" style="text-align: center">
		<%= link_to "ESPÉCIES(#{@crime.modalidades.count.to_s})", admin_crime_modalidades_path(@crime.id), :class =>"button" %> 
		<%= link_to "DOUTRINAS(#{@crime.doutrinas.count.to_s})", admin_crime_doutrinas_path(@crime.id), :class =>"button" %>
		<%= link_to "JURISPRUDÊNCIAS(#{@crime.juris.count.to_s})", admin_crime_juris_path(@crime.id), :class =>"button" %>
		<%= link_to "CASOS(#{@crime.casos.count.to_s})", admin_crime_casos_path(@crime.id), :class =>"button" %>
		<%= link_to "TEMAS(#{@crime.temas.count.to_s})", admin_crime_temas_path(@crime.id), :class =>"button" %> 
		<%= link_to "QUESTÕES(#{@crime.qts.count.to_s})", admin_crime_qts_path(@crime.id), :class =>"button" %>
	</p>
</div>