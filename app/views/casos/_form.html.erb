<%= form_for([@crime, @crime.casos.build]) do |f| %>  
  <div class="field">
    <%= f.text_field :autor, :size => "70", :placeholder => "Autor", :class => "autor" %><br/>
  </div>
  <div class="field">
    <%= f.text_area :corpo, :cols => "69", :rows => "7", :placeholder => "Texto do caso", :class => "corpo" %><br/>
    Admite-se tags HTML: &lt b &gt <b>Negrito</b> &lt /b &gt - &lt i &gt <i>Itálico</i> &lt /i &gt - &lt br /&gt Quebra de Linha
  </div>
  <div class="field">
    <%= f.text_field :ref, :size => "70", :placeholder => "Referência", :class => "ref" %><br/>
  </div>
  	<hr/>
    <%= f.submit "Gravar", :disable_with => "Aguarde...",  :class => "btn btn-primary"%> ou <%= link_to "Cancelar", @crime %>
    [ O caso inserido ficará pedente de moderação. ]
<% end %>